<div class="page-head">
  <h2>Current Affairs</h2>
</div>
<div class="cl-mcont">
  <div class="row wizard-row">
    <div class="col-md-12 fuelux">
      <div class="block-wizard">
        <div class="step-content">
          <%= form_for(@current_affair, url: admin_current_affair_path(@current_affair), html: {class: 'form-horizontal group-border-dashed'} ) do |f| %>
            <div id="step1" class="step-pane active">
              <div class="form-group no-padding">
                <div class="col-sm-7">
                  <h3 class="hthin">Edit Current Affair News</h3>
                </div>
              </div>
              <%= render partial: "form", locals: {f: f} %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
