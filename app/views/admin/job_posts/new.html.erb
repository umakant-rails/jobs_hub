<div class="page-head">
  <h2>Job Posts Form</h2>
</div>
<div class="cl-mcont">
  <div class="row wizard-row">
    <div class="col-md-12 fuelux">
      <div class="block-wizard">
        <div class="step-content">
          <%= form_for(@job_post, url: new_admin_job_job_post_path(@job), html: {class: 'form-horizontal group-border-dashed'} ) do |f| %>  
            <div class="form-group">
              <label class="col-sm-3 control-label">Post Name</label>
              <div class="col-sm-6">
                <%= f.text_field :post_name, autofocus: true, placeholder: "Post Name", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Number of Vacancies</label>
              <div class="col-sm-6">
                <%= f.text_field :vacancies, autofocus: true, placeholder: "Number of Vacancies", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Salary</label>
              <div class="col-sm-6">
                <%= f.text_field :salary, autofocus: true, placeholder: "Salary", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Qualifications</label>
              <div class="col-sm-6">
                <%= f.text_area :qualifications, autofocus: true, placeholder: "Type Qualifications Here ...", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-9">
                <button class="btn btn-default">Cancel</button>
                <%= f.submit "Create Job Post", class: "btn btn-primary wizard-next" %>
              </div>
            </div>
          <% end %>
          <%= link_to 'Show', @job %> |
          <%= link_to 'Back', jobs_path %>
        </div>
      </div>
    </div>
  </div>
</div>

