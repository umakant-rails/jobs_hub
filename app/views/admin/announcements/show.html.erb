<div class="page-head">
  <h2>Announcement Details</h2>
</div>
<div class="cl-mcont">
  <div class="row wizard-row">
    <div class="col-md-12 fuelux">
      <div class="block-wizard">
        <div class="step-content">
          <div class="job_hdr row">
            <div class="col-md-12"><%= @announcement.job_name %></div>
          </div>
          <div class="clear mrgn-top"></div>
          <%= @announcement.description %>
          <div class="row-fluid mrgn-top">
            <strong>Announcement Type:&nbsp;&nbsp;</strong><%= @announcement.announcement_type_id %>
          </div>

          <div class="row-fluid mrgn-top">
            <strong>Website Link:&nbsp;&nbsp;</strong>
            <span class="mrgn-top"><%= @announcement.website_link %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
