<div class="clear"> </div>
<div class="row-fluid job-group-hdr">Latest Jobs</div>

<table class="table jobs-table">
  <thead>
    <tr>
      <th style="width:35%;">Exam Name</th>
      <th style="width:20%;">Positions</th>
      <th style="width:20%;">Eligibility</th>
      <th style="width:10%;">Last Date</th>
      <th style="width:10%;">Details</th>
    </tr>
  </thead>
  <tbody>
    <% jobs.each do | job | %>
      <tr style="cursor:pointer;">
        <td>
          <strong>
            <%= link_to job.title.truncate(100), job_path(job), class: 'job-detail-link' %>
          </strong>
        </td>
        <td><%= get_job_posts(job) %></td>
        <td><strong>Graduate / Post Graduate</strong></td>
        <td><%= job.end_date.strftime("%d-%b-%Y") %></td>
        <td><%= link_to "View more", job_path(job), class: 'job-view-more' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
