<div class="row">
  <% if current_affairs.blank? %>
    <br/>
      <center>There is no updates now.</center>
    <br/>
  <% elsif current_affairs.size == 1 %>
    <div class="col-md-12 crt-affr-bullets pull-left">
      <div class="crt-affr-bullet-index">
        <strong><i class="fa fa-caret-right crt-affr-caret"></i></strong>
      </div>
      <div class="crt-affr-description">
        <%= current_affairs.first.description %>
      </div>
      <div class="clear"></div>
    </div>
  <% else %>
    <% current_affairs && current_affairs.each do | crt_affr | %>
      <div class="col-md-6 crt-affr-bullets pull-left">
        <div class="crt-affr-bullet-index">
          <strong><i class="fa fa-caret-right crt-affr-caret"></i></strong>
        </div>
        <div class="crt-affr-description border-btm">
          <%= crt_affr.description %>
        </div>
        <div class="clear"></div>
      </div>
    <% end %>
  <% end %>
</div>
<div class="clear">&nbsp;</div>
<% unless weekly_update %>
  <div class="row-fluid comment-box-block">
    <div class="row-fluid">
      <h4>Comments : </h4>
    </div>
    <div class="clear"></div>
    <div class="row-fluid">
      <input type="hidden" value="<%= daily_update && daily_update.id %>" id="daily_update_id"/>
      <!--<input type="text" value="" placeholder="Comment type here ..." class="form-control comment-box" 
        id="daily_update_id" name="comment" id="comment-box"/> -->
      <textarea value="" placeholder="Comment type here ..." class="form-control comment-box" 
        id="daily-update-comment-box" name="comment" id="comment-box"/></textarea>
      <div  class="clear"></div>
      <!--<button class="pull-right btn btn-primary" id="create-comment">Post Comment</button>-->
    </div>
    <div class="clear"></div>
    <div class="row-fluid" id="comment-list-box">
      <%= render partial: "current_affairs/comment_list", locals: {comments: daily_update_comments} %>
    </div>
  </div>
<% end %>
