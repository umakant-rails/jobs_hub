var question_id;
var correctAnswerCount = 0;
var correctAnswer = [];
var unCorrectAnswer = [];
var totalNumberQuestion = <%= @questions.length %>;

var visitorAnswer;
var questionAnswer;
  
<% @questions.each do | question |  %>
  question_id = '<%= question.id %>';
  
  visitorAnswer = $("#quiz-question-" + question_id).find('.ques-option:checked').val().toLowerCase();
  questionAnswer = '<%= question.answer %>';
  
  if( questionAnswer === visitorAnswer) {
    correctAnswerCount = correctAnswerCount + 1;
    $("#quiz-question-" + question_id).removeClass();
    $("#quiz-question-" + question_id).addClass('row quiz-question-body correct-answered-quiz-question');
  } else {
    $("#quiz-question-" + question_id).removeClass();
    $("#quiz-question-" + question_id).addClass('row quiz-question-body wrong-answered-quiz-question');
  }
<% end %>

appFunction.showMessage('success', 'Quiz Result: correct answer is : ' + correctAnswerCount + ' Wrong answer is : ' + (totalNumberQuestion - correctAnswerCount));
